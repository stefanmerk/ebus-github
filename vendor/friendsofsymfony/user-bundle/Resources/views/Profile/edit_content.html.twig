{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    {#{ form_widget(form) }#}
    {{ form_start(form, {'attr': {'data-ajax': 'false'}}) }}
        <div data-role="fieldcontain">
            {{ form_label(form, 'Vorname') }}
            {{ form_widget(form.firstName) }}
        </div>
        <div data-role="fieldcontain">
            {{ form_label(form, 'Nachname') }}
            {{ form_widget(form.lastName) }}
        </div>
        <div data-role="fieldcontain">
            {{ form_label(form, 'Stra√üe') }}
            {{ form_widget(form.street) }}
        </div>
        <div data-role="fieldcontain">
            {{ form_label(form, 'Hausnummer') }}
            {{ form_widget(form.streetNumber) }}
        </div>
        <div data-role="fieldcontain">
            {{ form_label(form, 'PLZ') }}
            {{ form_widget(form.zip) }}
        </div>
        <div data-role="fieldcontain">
            {{ form_label(form, 'Ort') }}
            {{ form_widget(form.town) }}
        </div>
        {#{ form_widget(form.submit, {'attr': {'class': 'blue_button'}, 'label' : 'Absenden'}) }#}
        <button class="blue_button" type="submit">{{ 'profile.edit.submit'|trans }}</button>
        {{ form_rest(form) }}
    {{ form_end(form) }}
</form>
