{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Furniture</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ entity.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td><iframe
  width="600"
  height="450"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDLb8E0gTMQBuufB03f_LqKFg7A6RSTMkc&q={{entity.user.address}}">
</iframe></td>
            </tr>
        </tbody>
    </table>

            
            

        <ul class="record_actions">
    <li>
        <a href="{{ path('furniture') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('furniture_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
