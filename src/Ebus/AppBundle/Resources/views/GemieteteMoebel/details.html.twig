{% block headerTitle -%}{{ borrow.furniture.name }} - gemietet{%- endblock %}
{% extends '::base.html.twig' %}

{% block body -%}
    <div data-role="fieldcontain">
        <label for="name">Dauer</label>
        <input type="text" name="name" id="name" value="{{ borrow.daysOfRental }} Tage" readonly/>
    </div>
    <div data-role="fieldcontain">
        <label for="name">Zeitraum</label>
        <input type="text" name="name" id="name" value="{{ borrow.dateFrom|date("d.m.Y") }} - {{ borrow.dateUntil|date("d.m.Y") }}" readonly/>
    </div>
    <div data-role="fieldcontain">
        <label for="name">Gesamtkosten</label>
        <input type="text" name="name" id="name" value="{{  borrow.price|number_format(2, ',', '.') }} â‚¬" readonly/>
    </div>
    <div data-role="fieldcontain">
        <label for="name">Vermieter</label>
        <input type="text" name="name" id="name" value="{{ borrow.lessor.firstName }} {{ borrow.lessor.lastName }}" readonly/>
    </div>
    
    <div data-role="fieldcontain">
        <a href="{{ path('gemietete_bewerten', { 'id':  borrow.id }) }}" data-ajax="false" data-role="button"  class="blue_button">
            <span class="ui-btn-inner ui-btn-corner-all">
                <span class="ui-btn-text">Bewerten</span>
            </span>
        </a>
    </div>
{% endblock %}