{% block headerTitle -%}{{ borrow.furniture.name }} - Anfrage bearbeiten{%- endblock %}
{% extends '::base.html.twig' %}

{% block body -%}
    <div data-role="fieldcontain">
        <label for="name">Dauer</label>
        <input type="text" name="name" id="name" value="{{ borrow.daysOfRental }} Tage" readonly/>
    </div>
    <div data-role="fieldcontain">
        <label for="name">Zeitraum</label>
        <input type="text" name="name" id="name" value="{{ borrow.dateFrom|date("d.m.Y") }} - {{ borrow.dateUntil|date("d.m.Y") }}" readonly/>
    </div>
    <div data-role="fieldcontain">
        <label for="name">Gesamtkosten</label>
        <input type="text" name="name" id="name" value="{{  borrow.price|number_format(2, ',', '.') }} â‚¬" readonly/>
    </div>
    <div data-role="fieldcontain">
        <label for="name">Anfrage von</label>
        <input type="text" name="name" id="name" value="{{ borrow.leaser.firstName }} {{ borrow.leaser.lastName }}" readonly/>
    </div>
    
    <div data-role="fieldcontain">
        <a href="{{ path('borrow_detail_accept_reject', { 'id':  borrow.id, 'type': 'accept' }) }}" data-role="button" class="blue_button" data-inline="true">Annehmen</a>

        <a href="{{ path('borrow_detail_accept_reject', { 'id':  borrow.id, 'type': 'reject' }) }}" data-role="button" data-inline="true">Ablehnen</a>
    </div>

{% endblock %}